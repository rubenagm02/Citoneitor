<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/item_cita_nombre"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000000"
                    android:alpha=".8"
                    android:text="Rubén Alejandro Guardado Maldonado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_cita_servicio"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:alpha=".8"
                    android:text="Rubén "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_cita_hora"
                    android:textColor="@color/colorAcento"
                    android:layout_marginTop="10dp"
                    android:text="Hora: 7:00 pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:alpha=".3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icono_flecha_derecha"
                android:layout_width="30dp"
                android:layout_height="70dp" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>