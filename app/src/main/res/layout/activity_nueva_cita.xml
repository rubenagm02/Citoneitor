<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.citoneitor.Activities.NuevaCita">
    <android.support.v7.widget.Toolbar
        android:id="@+id/actividades_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:alpha=".88"
                android:src="@drawable/icono_cliente"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/principal_clientes"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:text="Nueva cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorFuerte"
                android:textSize="16sp"
                android:text="Cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:elevation="5dp"
                android:gravity="center"
                android:text="Selecciona un cliente"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="37dp" />
            <TextView
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorFuerte"
                android:textSize="16sp"
                android:text="Fecha de la cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <DatePicker
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></DatePicker>
            <TextView
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorFuerte"
                android:textSize="16sp"
                android:text="Selecciona la hora de la cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TimePicker
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TimePicker>
            <TextView
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorFuerte"
                android:textSize="16sp"
                android:text="Servicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:elevation="5dp"
                android:gravity="center"
                android:text="Selecciona los servicios de la cita"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="37dp" />
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:elevation="5dp"
                android:gravity="center"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                android:background="@color/colorAcento"
                android:layout_width="match_parent"
                android:layout_height="37dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
