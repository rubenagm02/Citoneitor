<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="121dp">
    <LinearLayout
        android:id="@+id/item_cliente_click"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/item_cliente_imagen"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="110dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_cliente_nombre"
                android:fontFamily="sans-serif-condensed"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="Rubén Alejandro Guardado Maldonado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_cliente_color_sexo"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorRosa"
                android:layout_width="match_parent"
                android:layout_height="4dp" />
            <TextView
                android:textColor="#000000"
                android:alpha=".7"
                android:fontFamily="sans-serif-light"
                android:id="@+id/item_cliente_edad"
                android:layout_marginTop="5dp"
                android:text="Edad: 24 años"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>